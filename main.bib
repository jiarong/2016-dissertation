	pmid = {22891790},
	keywords = {Archaea, Bacteria, Bacterial Physiological Phenomena, Biodiversity, Biofuels, Illinois, Nitrogen, Nitrogen Cycle, Poaceae, RNA, Ribosomal, 16S, Soil, Soil Microbiology},
