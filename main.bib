	journal = {Applied and Environmental Microbiology},
	author = {Hai, Brigitte and Diallo, Ndeye Hélène and Sall, Saidou and Haesler, Felix and Schauss, Kristina and Bonzi, Moussa and Assigbetse, Komi and Chotte, Jean-Luc and Munch, Jean Charles and Schloter, Michael},
	month = aug,
